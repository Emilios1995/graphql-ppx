{
  "name": "@_macos.arm64/ocaml",
  "dependencies": {
    "@_macos.arm64/sysroot": "*",
    "@opam/ocamlfind": "*",
    "generate-installer": "*",
    "ocaml": "*"
  },
  "esy": {
    "buildsInSource": true,
    "buildEnv": {
      "cur__etc": "#{self.install}/macos.arm64-sysroot/etc",
      "cur__share": "#{self.install}/macos.arm64-sysroot/share",
      "cur__toplevel": "#{self.install}/macos.arm64-sysroot/toplevel",
      "cur__stublibs": "#{self.install}/macos.arm64-sysroot/stublibs",
      "cur__doc": "#{self.install}/macos.arm64-sysroot/doc",
      "cur__man": "#{self.install}/macos.arm64-sysroot/man",
      "cur__lib": "#{self.install}/macos.arm64-sysroot/lib",
      "cur__sbin": "#{self.install}/macos.arm64-sysroot/sbin",
      "cur__bin": "#{self.install}/macos.arm64-sysroot/bin",
      "cur__install": "#{self.install}/macos.arm64-sysroot",
      "cur__original_root": "#{self.original_root}",
      "OCAMLFIND_CONF": "%{store}%/findlib/#{self.id}/findlib.conf",
      "OCAMLFIND_DESTDIR": "#{self.install}/macos.arm64-sysroot/lib",
      "TOPKG_CONF_TOOLCHAIN": "macos.arm64",
      "OCAMLLIB": null,
      "OCAMLPATH": null
    },
    "exportedEnv": {
      "OCAML_TOPLEVEL_PATH": {
        "scope": "global",
        "val": "#{self.install}/macos.arm64-sysroot/lib/ocaml"
      },
      "ESY_TOOLCHAIN_OCAML": {
        "scope": "global",
        "val": "#{self.install}/macos.arm64-sysroot"
      },
      "OCAML_TOPLEVEL_PATH": {
        "scope": "global",
        "val": "#{@opam/ocamlfind.install}/toplevel"
      }
    },
    "build": [
      [ "sh", "#{self.original_root}/files/git.clone.sh" ],
      [ "cp", "-aR", "ocaml/.", "." ],
      [ "mv", "ocaml", "__ocaml" ],
      [ "cp", "-r", "#{self.original_root}/files/.", "#{self.root}" ],
      [ "mv", "#{self.install}", "_____install_____" ],
      [ "mkdir", "-p", "#{self.install}/_esy" ],
      [ "mv", "_____install_____", "#{self.install}/macos.arm64-sysroot" ],
      [
        "./configure", "--prefix=$cur__install",
        "--build=$ESY_TOOLCHAIN_BUILD", "--host=$ESY_TOOLCHAIN_FULL_HOST",
        "--disable-ocamldoc", "CC=$ESY_TOOLCHAIN_CC", "AS=$ESY_TOOLCHAIN_AS",
        "AR=$ESY_TOOLCHAIN_AR", "RANLIB=$ESY_TOOLCHAIN_RANLIB",
        "ASPP=$ESY_TOOLCHAIN_ASPP", "PARTIALLD=$ESY_TOOLCHAIN_PARTIALLD"
      ],
      [ "sh", "make.cross.sh" ]
    ],
    "install": [ [ "generate-installer", "macos.arm64" ] ]
  }
}